  <%- include("partials/header"); -%>

<div class="mt-1 mb-2 container">
  <div class="row d-lg-none mb-5">
    <div class="col d-flex justify-content-start">
        <a class="link" href="/">< Back to Home Page</a>
    </div>
  </div> 

  <% if(typeof alert !== undefined) { %>
    <% alert.forEach(function(alert) { %>
        <div id="flash-message" class="msg-alert alert alert-success alert-dismissible fade show" role="alert">
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
           <% console.log(alert.msg) %> 
           <div class="'text-center">
            <i class="fa-solid fa-check"></i> 
            <strong> Success!</strong>
            <%= alert.msg %>
           </div>
           </button>
          </div>
    <% }) %>
<% } %>
  <script>
    setTimeout(function() {
      document.getElementById('flash-message').style.display = 'none';
    }, 2500);
  </script>
  <div class="row">
    <div class="col">    
      <h1>  <%=title%> </h1>
      <p class="lastSeen">Last edited: <%=new Date(updatedAt).toLocaleDateString("en-US", {
        weekday: "long",
        day: "numeric",
        month: "long", 
        time:"numeric"
      })%></p>
      <p ><%=content%></p>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div class=" gap-3 d-flex">
        <form action="/posts/<%= postId %>" method="post">
          <button value="delete" confirm="Are you sure?" class="btn btn-sm btn-danger " type="submit"> 
            <i class="fa-solid fa-trash"></i> Delete 
          </button>
        </form>
        <div class="">
          <a class="btn btn-secondary btn-sm" href="/posts/<%= postId %>/edit">
            <i class="fa-solid fa-pen-to-square"></i>
            Edit
          </a>
        </div>
      </div>
   </div>
  </div>
</div>  

<%- include("partials/footer"); -%>