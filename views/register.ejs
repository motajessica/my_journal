<%- include('partials/header') %>
<section class="bg-color content">
  <div class="container">
    <!-- sucess msg validation -->
    <div class="max-700">
      <h1 class="pb-4">Register</h1>
      <div class="row">
        <div class="col-sm-8">
          <div class="">
            <div class="">
              <%- include("partials/alerts") %>

              <!-- Makes POST request to /register route -->
              <form action="/register" method="POST" novalidate>
                <div class="form-group">
                  <label for="email">Email</label>
                  <input type="email" class="form-control" name="username" placeholder="Email" value=<% form.username || "" %> >
                </div>
                <div class="form-group">
                  <label class="mt-2" for="password">Password</label>
                  <input type="password" class="form-control" name="password" placeholder="Password">
                </div>
                <button type="submit" class="btn cta-button mt-3" >Sing-Up</button>
              </form>
            </div>
          </div>
        </div>

        <div class="d-flex flex-wrap mt-4 justify-content-between justify-content-md-start gap-2">
          <a class="btn btn-social btn-google pr-2" href="/auth/google" role="button">
            <span class="fa-brands fa-google"></span>
            Sign In with Google
          </a>
          <!-- <a class="btn btn-social btn-facebook" href="/auth/google" role="button">
            <span class="fa-brands fa-facebook"></span>
            Sign In with Facebook
          </a> -->
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
