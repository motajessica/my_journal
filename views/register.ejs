<%- include('partials/header') %>
<div class="container mt-5">
  <h1 class="titles">REGISTER</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="">
        <div clas="">
            <!-- Makes POST request to /register route -->
            <form action="/register" method="POST">
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="username" placeholder="Email">
              </div>
              <div class="form-group">
                <label class="mt-2" for="password">Password</label>
                <input type="password" class="form-control" name="password" placeholder="Password">
              </div>
              <button type="submit" class="btn mt-3 btn-app">Register</button>
            </form>
        </div>
      </div>
    </div>

    <div class="d-flex flex-wrap mt-4 justify-content-between justify-content-md-start gap-2">
      <a class="btn btn-social btn-google pr-2" href="/auth/google" role="button">
        <span class="fa-brands fa-google"></span>
        Sign In with Google
      </a>
      <a class="btn btn-social btn-facebook" href="/auth/google" role="button">
        <span class="fa-brands fa-facebook"></span>
        Sign In with Facebook
      </a>
    </div>  

  </div>
</div>

<%- include('partials/footer') %>
