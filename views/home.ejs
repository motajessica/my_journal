
<%- include("partials/header"); -%>
<div class="mt-2 mb-5 container">
    <div class="row">
        <div class="col">
            <h1 class="titles">Home</h1>
        </div>
    </div>
    <div class="row">
        <div col="col">
            <% posts.forEach(function(post){ %>
                <h3><%=post.title%></h3>
                <p>
                    <%=post.content.substring(0,100) + " ...   " %>
                        <a class="links" href="/posts/<%=post._id%>">Read More</a>
                </p>
            <% }) %>
        </div> 
    </div>
</div>
        
<%- include("partials/footer"); -%>
