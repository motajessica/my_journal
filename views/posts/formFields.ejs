<input type="hidden" value="<%= id %>" name="id"></input>
<div class="form-group mb-4">
  <label>Title</label>
  <input class="form-control" type="text" name="title" value="<%= title %>">
</div>
<div class="form-group">
  <label>Body</label>
  <textarea class="form-control" name="content" rows="5" cols="30"><%= content %></textarea>
</div>
<button class="btn btn mt-3 cta-button" type="submit" name="button">Publish</button>
