<%- include("partials/header"); -%>

<div class="mt-2 mb-5 container">
  <div class="row d-lg-none mb-5">
    <div class="col d-flex justify-content-start">
        <a class="link" href="/">< Back to Home Page</a>
    </div>
  </div> 
  <div class="row">
    <div class="col">
      <h1><%= post.title %></h1>
      <p class="lastSeen">Last edited on <%= post.updatedAt %></p>
      <p ><%= post.content %></p>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div class=" gap-2 d-flex">
        <form action="/posts/<%= post.id %>" method="post">
          <button value="delete" confirm="Are you sure?" class="btn btn-sm btn-danger " type="submit"> 
            <i class="fa-solid fa-trash"></i> Delete 
          </button>
        </form>
        <div class="">
          <a class="btn btn-secondary btn-sm" href="/posts/<%= post.id %>/edit">
            <i class="fa-solid fa-pen-to-square"></i>
            Edit
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("partials/footer"); -%>